<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.gemapps.picapp.ui.widget.CircularImageView
        android:id="@+id/user_icon_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:padding="4dp"
        android:src="@drawable/ic_buddy"/>

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.CommentTimestamp"
        tools:text="3 hours"/>

    <TextView
        android:id="@+id/author_name"
        android:textAppearance="@style/TextAppearance.Comment.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/user_icon_image"
        android:layout_toLeftOf="@id/comment_time"
        android:layout_toRightOf="@id/user_icon_image"
        android:layout_toStartOf="@id/comment_time"
        android:lines="1"
        tools:text="Edu G"/>

    <TextView
        android:id="@+id/comment_text"
        android:textAppearance="@style/TextAppearance.Comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/author_name"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:textColorLink="@drawable/pic_comment_link"
        android:textColorHighlight="@color/pic_link_highlight"
        android:autoLink="web"
        android:layout_toEndOf="@id/user_icon_image"
        android:layout_toRightOf="@id/user_icon_image"
        tools:text="bla bla bla bla bla bla bla bla "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider"/>

</RelativeLayout>