<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:id="@+id/pic_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_light_gray"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="My Awesome title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/pic_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_chat_bubble_black_24px"
            android:drawableStart="@drawable/ic_chat_bubble_black_24px"
            android:gravity="center"
            tools:text="999"/>

        <android.support.v4.widget.Space
            android:layout_width="18dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/pic_faves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_favorite_black_24px"
            android:drawableStart="@drawable/ic_favorite_black_24px"
            android:gravity="center"
            tools:text="999"/>

    </LinearLayout>
</LinearLayout>